<Window x:Class="P_Lay.LoginWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P_Lay"
        mc:Ignorable="d"
        Title="LoginWin" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5  *"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="182*"/>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="263*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Lab_UserName" Content="Username: " Grid.Column="1" Grid.Row="1" />
        <TextBox x:Name="TBx_UserName" Grid.Column="2" Grid.Row="1" />
        <Label x:Name="Lab_PWord" Content="Password: " Grid.Column="1" Grid.Row="2" />
        <TextBox x:Name="TBx_PWord" Grid.Column="2" Grid.Row="2" />
        <Button x:Name="But_Login" Content="Login" Grid.Column="2" Grid.Row="3" Click="But_Login_Click" />
    </Grid>
</Window>
